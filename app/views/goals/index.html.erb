<h1><%= t 'models.goal.goal list'%></h1>

<table class="table table-striped table-bordered table-hover">

  <thead class="table-dark">
  <tr>
    <th><%= t 'models.goal.title'%></th>
    <th><%= t 'models.goal.description'%></th>
    <th><%= t 'models.goal.start_date'%></th>
    <th><%= t 'models.goal.finish_date'%></th>
    <th><%= t 'models.goal.team_name'%></th>
    <th><%= t 'models.goal.goal_status'%></th>
    <th><%= t 'models.goal.team_id'%></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @goals.each do |goal|%>
  <tr>
    <td><%= goal.title %></td>
    <td><%= goal.description %></td>
    <td><%= goal.start_date %></td>
    <td><%= goal.finish_date %></td>
    <td><%= goal.team_name %></td>
    <td><%= goal.goal_status %></td>
    <td><%= goal.team_id %></td>
    <td><%= link_to t('links.show'), goal %></td>
    <td><%= link_to t('links.edit'),  edit_goal_path(goal) %></td>
    <td><%= link_to t('links.destroy'), goal, method: :delete, data: { confirm: 'Are you sure?'} %></td>
  </tr>

  <%end%>

  </tbody>

</table>
<br>


<%= link_to t('links.new goal'), new_goal_path, class:"btn btn-secondary" %>