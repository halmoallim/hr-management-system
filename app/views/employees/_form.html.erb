<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= t "globals.forms.messages.errors.multiple errors", count: employee.errors.count %> </h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group mb-3">
    <%= form.text_field :name, class:"form-control", placeholder: true %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :email, class:"form-control", placeholder: true  %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :job, class:"form-control", placeholder: true %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :salary, class:"form-control", placeholder: true  %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :employment_status, class:"form-control", placeholder: true %>
  </div>

   <div class="field form-group mb-3" class="form-control">
    <%= form.select :team_id,Team.all.pluck(:name,:id),{prompt:'Team'},{class: "form-control"}%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary"%>
  </div>
<% end %>
