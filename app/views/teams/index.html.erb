<h1>Teams List</h1>

<table class="table table-striped table-bordered table-hover">

  <thead class="table-dark">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Members</th>
    <th>Leader</th>
    <th>division Id</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @teams.each do |team|%>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.description %></td>
    <td><%= team.team_members %></td>
    <td><%= team.team_lead %></td>
    <td><%= team.division_id %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?'} %></td>
  </tr>

  <%end%>

  </tbody>

</table>
<br>


<%= link_to "New Team", new_team_path, class:"btn btn-secondary" %>