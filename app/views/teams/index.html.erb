<h1><%= t 'models.team.team list'%></h1>

<table class="table table-striped table-bordered table-hover">

  <thead class="table-dark">
  <tr>
    <th><%= t 'models.team.name'%></th>
    <th><%= t 'models.team.description'%></th>
    <th><%= t 'models.team.team_members'%></th>
    <th><%= t 'models.team.team_lead'%></th>
    <th><%= t 'models.team.division_id'%></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @teams.each do |team|%>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.description %></td>
    <td><%= team.team_members %></td>
    <td><%= team.team_lead %></td>
    <td><%= team.division_id %></td>
    <td><%= link_to t('links.show'), team %></td>
    <td><%= link_to t('links.edit'), edit_team_path(team) %></td>
    <td><%= link_to t('links.destroy'), team, method: :delete, data: { confirm: 'Are you sure?'} %></td>
  </tr>

  <%end%>

  </tbody>

</table>
<br>


<%= link_to t('links.new team'), new_team_path, class:"btn btn-secondary" %>